{
  "compilerOptions": {
    "baseUrl": "./",

    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "isolatedModules": true,
    "resolveJsonModule": true,

    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",

    "types": ["node", "mocha"],
    "paths": {
      "react-docgen": ["../../packages/api-docs-builder/react-docgen.d.ts"],
      "@mui/base": ["../../packages/mui-base/src"],
      "@mui/base/*": ["../../packages/mui-base/src/*"],
      "@mui/utils": ["../../packages/mui-utils/src"],
      "@mui/utils/*": ["../../packages/mui-utils/src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
